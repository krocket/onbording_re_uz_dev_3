<?xml version="1.0" ?>
<odoo>
  <!-- Library App View Form -->
  <record id="view_form_book" model="ir.ui.view">
    <field name="name">Library Books</field>
    <field name="model">library.book</field>
    <field name="arch" type="xml">
      <form string="Book">
        <header>
          <button name="button_check_isbn" type="object" string="Check ISBN" />
          <button name="button_your_are_best" type="object" string="Yeah" />
        </header>
        <sheet>
          <group>
            <separator string="Informations" />
            <group>
              <field name="name" />
              <field name="isbn" />
              <field name="active" />
            </group>
            <separator string="Date" />
            <group name="date">
              <field name="date_publisher" />
            </group>
            <separator string="ComplÃ©mentaire" />
            <group>
              <field name="image" />
              <field name="publisher_id" />
              <field name="author_ids" />
              <field name="category_ids" widget="many2many_tags" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Library App View List -->
  <record id="view_tree_book" model="ir.ui.view">
    <field name="name">Books List</field>
    <field name="model">library.book</field>
    <field name="arch" type="xml">
      <list string="Book">
        <field name="name" />
        <field name="author_ids" widget="many2many_tags" />
        <field name="category_ids" widget="many2many_tags" />
        <field name="date_publisher" optional="hide" />
        <field name="publisher_id" />
      </list>
    </field>
  </record>

  <record id="view_search_book" model="ir.ui.view">
    <field name="name">Books search</field>
    <field name="model">library.book</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" />
        <field name="publisher_id" />
        <filter name="filter_active" 
                string="Active"
                domain="[('active','=',True)]" />
        <filter name="filter_inactive" 
                  string="inActive"
                  domain="[('active','=',False)]" />
        <group expand="1" string="Group">
          <filter string="Publisher" name="group_by_publisher_id" context="{'group_by': 'publisher_id'}" />
        </group>
      </search>
    </field>
  </record>

</odoo>